@model NotesApp.Models.Note

@{
    ViewData["Title"] = "Delete Note";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-50">
        <div class="card-body p-4 text-center">
            <h3 class="fw-bold text-danger mb-3">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Note
            </h3>

            <p class="text-muted mb-4">
                Are you sure you want to permanently delete this note? <br />
                This action <strong>cannot be undone.</strong>
            </p>

            <div class="border rounded-4 p-3 mb-4 bg-light text-start">
                <h5 class="fw-semibold text-primary">@Model.Title</h5>
                <p class="text-muted mb-2">@Model.Description</p>
                <small class="text-secondary">Created on: @Model.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")</small>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
