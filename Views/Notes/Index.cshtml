@model IEnumerable<NotesApp.Models.Note>

@{
    ViewData["Title"] = "My Notes";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">My Notes</h2>
        <p class="text-muted">Organize your thoughts beautifully</p>
    </div>

    <form method="get" class="d-flex justify-content-center mb-3">
        <div class="input-group w-50 shadow-sm">
            <span class="input-group-text bg-white border-end-0">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="search" class="form-control border-start-0" placeholder="Search by title..." />
            <button type="submit" class="btn btn-primary px-4">Search</button>
        </div>
    </form>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle"></i> Add New Note
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Created</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var note in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@note.Title</td>
                            <td>@note.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-outline-info btn-sm rounded-pill me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-outline-warning btn-sm rounded-pill me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-outline-danger btn-sm rounded-pill">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
