@model NotesApp.Models.Note

@{
    ViewData["Title"] = "Create Note";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-50">
        <div class="card-body p-4">
            <h3 class="text-center fw-bold text-primary mb-3">
                Create a New Note
            </h3>
            <p class="text-center text-muted mb-4">Write your thoughts, ideas, or reminders below</p>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input asp-for="Title" class="form-control rounded-3 shadow-sm" placeholder="Enter note title..." />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="5" placeholder="Write your note here..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success rounded-pill px-4 shadow-sm">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
