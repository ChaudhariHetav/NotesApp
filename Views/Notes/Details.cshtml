@model NotesApp.Models.Note

@{
    ViewData["Title"] = "Note Details";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-50">
        <div class="card-body p-4">
            <h3 class="fw-bold text-primary text-center mb-3">
                 Note Details
            </h3>

            <div class="mb-4 border rounded-4 p-3 bg-light">
                <h4 class="fw-semibold text-dark mb-2">@Model.Title</h4>
                <p class="text-muted mb-3" style="white-space: pre-wrap;">@Model.Description</p>
                <small class="text-secondary">
                    <i class="bi bi-calendar3"></i>
                    Created on: @Model.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")
                </small>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill px-4 shadow-sm">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>
